<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/action_bar_size"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.TabLayout
        android:id="@+id/top_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_tab_layout_height"
        app:tabSelectedTextColor="@color/mainColorM"
        app:tabIndicatorColor="@color/mainColorM"
        />

    <android.support.v4.view.ViewPager
        android:layout_marginTop="@dimen/top_tab_layout_height"
        android:id="@+id/viewPager"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_tab">
    </android.support.v4.view.ViewPager>
</android.support.design.widget.CoordinatorLayout>
