<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.teamfairy.sopt.teamkerbell.activities.main.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom = "@dimen/bottom_tab_layout_height"
        android:overScrollMode = "never" />

    <android.support.design.widget.TabLayout
        android:id="@+id/main_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_tab_layout_height"
        android:layout_marginStart="0dp"
        android:layout_marginEnd = "0dp"
        android:background="@color/grayLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabIndicatorColor="@color/mainColor"
        app:tabSelectedTextColor="@color/mainColor" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:visibility = "gone"
        app:layout_constraintBottom_toTopOf = "@id/main_tab"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/icon_floating_add" />
</android.support.constraint.ConstraintLayout>
