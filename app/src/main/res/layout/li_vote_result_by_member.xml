<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/li_iv_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_profile_default"
        app:civ_border_color="@color/mainColorY"
        app:civ_border_width="0dp" />


    <TextView
        android:id="@+id/li_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="사용자1"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/li_iv_profile"
        android:layout_alignBottom="@id/li_iv_profile"
        android:layout_marginBottom="3dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/li_tv_content"
        android:layout_width="wrap_content"
        android:layout_height=  "wrap_content"
        android:layout_below="@id/li_iv_profile"
        android:layout_alignStart="@id/li_tv_name"
        android:layout_marginBottom="5dp"
        tools:text="찬성"
        />

</RelativeLayout>

