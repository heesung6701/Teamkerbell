<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="331dp"
    android:background="@drawable/shape_round_default"
    >

    <TextView
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_select_user"
        android:textColor="@color/mainColorM"
        android:textSize="16sp"
        android:textStyle="bold"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_complete"
        android:layout_below="@id/dialog_header"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:overScrollMode="never"
        >

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/shape_round_mint_bottom"
        android:text="@string/action_complete"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/FlatButton"/>
</RelativeLayout>
