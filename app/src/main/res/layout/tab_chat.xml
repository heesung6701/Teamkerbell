<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "@dimen/bottom_tab_layout_height">

    <ImageView
        android:id = "@+id/tab"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerInParent = "true"
        android:contentDescription = "@string/title_activity_chat"
        android:gravity = "center_horizontal"
        android:textColor = "#FFFFFF"
        android:textStyle = "bold"
        app:srcCompat = "@drawable/icon_tab_chat" />

    <TextView
        android:id = "@+id/tab_badge"
        android:layout_width = "wrap_content"
        android:layout_height = "16dp"
        android:layout_alignTop = "@id/tab"
        android:layout_gravity = "top|end"
        android:layout_marginStart = "-8dp"
        android:layout_marginTop = "-8dp"
        android:layout_toEndOf = "@id/tab"
        android:background = "@drawable/badge_background"
        android:gravity = "center"
        android:minWidth = "16dp"
        android:textColor = "@color/black"
        android:textSize = "8sp"
        android:textStyle = "bold"
        android:visibility = "invisible" />
</RelativeLayout>