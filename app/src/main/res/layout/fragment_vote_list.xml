<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical"

    tools:context = "org.teamfairy.sopt.teamkerbell.activities.items.vote.VoteListFragment">

    <TextView
        android:id = "@+id/tv_show_finished"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "end"
        android:layout_marginLeft = "16dp"
        android:layout_marginTop = "11dp"
        android:layout_marginRight = "16dp"
        android:layout_marginBottom = "5dp"
        android:clickable = "true"
        android:focusable = "true"
        android:text = "@string/action_show_finished"
        android:textColor = "@drawable/select_text_press"
        android:textSize = "16sp" />

    <include layout = "@layout/content_recyclerview" />
</LinearLayout>
