<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="org.teamfairy.sopt.teamkerbell.activities.unperformed.UnperformedNoticeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="3dp"
        android:text="@string/txt_unperformed"
        />

    <TextView
        android:text="@string/action_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="45dp"
        />

    <include layout="@layout/content_recyclerview"/>


</LinearLayout>
