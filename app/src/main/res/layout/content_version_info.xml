<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingTop="20dp"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    tools:context=".activities.setting.VersionInfoActivity"
    tools:showIn="@layout/activity_version_info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingExtra="4sp"
        android:text="@string/txt_version_info"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_marginStart="8dp"
    android:textSize="15sp"
    android:lineSpacingExtra="11sp"
    android:text="@string/app_name"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="8dp"
            android:textSize="15sp"
            android:lineSpacingExtra="11sp"
            android:text="@string/txt_version"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        android:textSize="15sp"
        android:lineSpacingExtra="11sp"
        android:text="@string/txt_direct_to_ceo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="15sp"
        android:lineSpacingExtra="11sp"
        android:autoLink="email"
        android:text="@string/txt_ceo_email"
        />

</LinearLayout>