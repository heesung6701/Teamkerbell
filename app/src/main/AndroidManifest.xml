<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.teamfairy.sopt.teamkerbell">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.home.TeamActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.items.notice.NoticeCardActivity"
            android:label="@string/title_activity_notice_card"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.items.notice.NoticeActivity"
            android:label="@string/title_activity_notice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.items.signal.SignalListActivity"
            android:label="@string/title_activity_signal_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.items.signal.SignalActivity"
            android:label="@string/title_activity_signal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.items.vote.VoteListActivity"
            android:label="@string/title_activity_vote_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.items.vote.VoteActivity"
            android:label="@string/title_activity_vote"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>